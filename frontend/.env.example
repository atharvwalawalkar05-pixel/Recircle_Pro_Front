# Copy this to .env.local for local development

PORT=5000

# Option 1: Local MongoDB (install MongoDB locally)
# MONGO_URI=mongodb://localhost:27017/recircle_db

# Option 2: MongoDB Atlas (replace with your actual credentials)
# MONGO_URI=mongodb+srv://YOUR_ACTUAL_USERNAME:YOUR_ACTUAL_PASSWORD@cluster0.0nyhv66.mongodb.net/recircle_db?retryWrites=true&w=majority

