{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "buildCommand": "npm install && npm run build",
  "outputDirectory": "frontend/build",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://recircle-backend.onrender.com/api/$1"
    },
    {
      "source": "/health",
      "destination": "https://recircle-backend.onrender.com/health"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "REACT_APP_API_URL": "https://recircle-backend.onrender.com",
    "REACT_APP_CLOUDINARY_CLOUD_NAME": "your-cloudinary-cloud-name"
  }
}
